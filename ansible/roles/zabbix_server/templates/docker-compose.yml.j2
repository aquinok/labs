services:
  db:
    image: mysql:8.0
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: "{{ zabbix_db_name }}"
      MYSQL_USER: "{{ zabbix_db_user }}"
      MYSQL_PASSWORD: "{{ zabbix_db_pass }}"
      MYSQL_ROOT_PASSWORD: "{{ zabbix_db_pass }}"
    command: ["--character-set-server=utf8mb4","--collation-server=utf8mb4_bin"]
    volumes:
      - "{{ zabbix_compose_dir }}/mysql:/var/lib/mysql"

  zabbix-server:
    image: "zabbix/zabbix-server-mysql:{{ zabbix_version }}-ubuntu"
    restart: unless-stopped
    depends_on:
      - db
    environment:
      DB_SERVER_HOST: db
      MYSQL_DATABASE: "{{ zabbix_db_name }}"
      MYSQL_USER: "{{ zabbix_db_user }}"
      MYSQL_PASSWORD: "{{ zabbix_db_pass }}"
    ports:
      - "10051:10051"

  web:
    image: "zabbix/zabbix-web-nginx-mysql:{{ zabbix_version }}-ubuntu"
    restart: unless-stopped
    depends_on:
      - db
      - zabbix-server
    environment:
      DB_SERVER_HOST: db
      MYSQL_DATABASE: "{{ zabbix_db_name }}"
      MYSQL_USER: "{{ zabbix_db_user }}"
      MYSQL_PASSWORD: "{{ zabbix_db_pass }}"
      ZBX_SERVER_HOST: zabbix-server
      PHP_TZ: "America/Chicago"
    ports:
      - "{{ zabbix_web_port }}:8080"
