services:
  db:
    image: {{ zabbix_mysql_image }}
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: {{ zabbix_db_name }}
      MYSQL_USER: {{ zabbix_db_user }}
      MYSQL_PASSWORD: {{ zabbix_db_pass }}
      MYSQL_ROOT_PASSWORD: {{ zabbix_db_root_pass }}
    command: ["--character-set-server=utf8mb4","--collation-server=utf8mb4_bin"]
    volumes:
      - "{{ zabbix_compose_dir }}/mysql:/var/lib/mysql"

  zabbix-server:
    image: "{{ zabbix_server_image }}"
    restart: unless-stopped
    depends_on:
      - db
    environment:
      DB_SERVER_HOST: db
      MYSQL_DATABASE: {{ zabbix_db_name }}
      MYSQL_USER: {{ zabbix_db_user }}
      MYSQL_PASSWORD: {{ zabbix_db_pass }}
    ports:
      - "{{ zabbix_server_port }}:10051"

  web:
    image: "{{ zabbix_web_image }}"
    restart: unless-stopped
    depends_on:
      - db
      - zabbix-server
    environment:
      DB_SERVER_HOST: db
      MYSQL_DATABASE: {{ zabbix_db_name }}
      MYSQL_USER: {{ zabbix_db_user }}
      MYSQL_PASSWORD: {{ zabbix_db_pass }}
      ZBX_SERVER_HOST: zabbix-server
      PHP_TZ: "{{ zabbix_php_tz }}"
    ports:
      - "{{ zabbix_http_port }}:8080"
